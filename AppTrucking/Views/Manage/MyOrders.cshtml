        <div class="list-group-item">
            <div class="row">
                <div class="col-md-12 list-group-item-heading">
                     <h3>Заказ №:@item.OrderId / Замовник: @item.FullName / Компаныя: @item.CompanyName</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><h4>From:</h4> @item.From</div>
                                <div class="col-md-3"><h4>To:</h4> @item.To</div>
                                <div class="col-md-3"><h4>Distance:</h4> @item.Distance</div>
                                <div class="col-md-3"><h4>Duration:</h4> @item.Duration</div>
                            </div>
                            <hr />
                        </div>
                       
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3"><h4>Car:</h4> @item.Title</div>
                                <div class="col-md-3"><h4>Driver Name:</h4>@item.DriverFullName </div>
                                <div class="col-md-3"><h4>Driver Phone:</h4>@item.DriverPhone </div>
                                <div class="col-md-3"><h4>Car tonage:</h4> @item.Tonnage</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <h4>Послуги:</h4>
                    <ul>
                        @foreach(var i in item.Services)
                        {
                            <li>@i.Title - @i.Price</li>
                        }
                    </ul>
                </div>
                <div class="col-md-2">
                    <div class="col-md-12"><h4>Total:</h4> @item.Total</div>
                    <div class="col-md-12"><h4>Status</h4> @item.Status</div>
                </div>
