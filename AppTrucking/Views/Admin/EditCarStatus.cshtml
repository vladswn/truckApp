@model AppTrucking.Models.Car
@{ 
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CarId)
        @Html.HiddenFor(model => model.BodyVolume)
        @Html.HiddenFor(model => model.LiftingCapacity)
        @Html.HiddenFor(model => model.Number)
        @Html.HiddenFor(model => model.Prce)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Tonnage)
        @Html.HiddenFor(model => model.TypeOfTransportId)
    <div class="modal-dialog" style="width:350px;">
        <div class="modal-content">
            <div class="modal-header alert alert-info">Змінити статус</div>
            <div class="modal-body">
                <h4>Змінити статус машини</h4>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.IsFree, ViewBag.IsFree as SelectList, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <br />
            </div>
            <div class="modal-footer">
                <input type="submit" value="Змінити" class="btn btn-primary" role="button" />
                <button class="btn btn-danger" data-dismiss="modal" area-hidden="true">Відміна</button>
            </div>
        </div>
    </div>
}
