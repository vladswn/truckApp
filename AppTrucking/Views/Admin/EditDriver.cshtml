 @model AppTrucking.Models.Driver

@{
    ViewBag.Title = "Редагувати водія";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
